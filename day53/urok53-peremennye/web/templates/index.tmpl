{{template "layout" .}}
{{define "content"}}
<header class="hero">
	<h1>{{.Title}}</h1>
	<p class="subtitle">{{.Subtitle}}</p>
	<div class="cta">
		<a class="btn" href="https://go.dev/doc/effective_go#variables" target="_blank" rel="noreferrer noopener">Документация Go: Variables</a>
		<a class="btn btn-secondary" href="https://golang.org/ref/spec#Variables" target="_blank" rel="noreferrer noopener">Спецификация</a>
	</div>
</header>

<section class="examples">
	{{range $i, $ex := .Examples}}
	<article class="card" data-index="{{$i}}">
		<header class="card-header">
			<h3>{{$ex.Title}}</h3>
			<div class="tags">{{join $ex.Tags ", "}}</div>
		</header>
		<div class="card-body">
			<div class="controls">
				<button class="btn small" data-action="toggle" data-target="code-{{$i}}">Показать код</button>
				<button class="btn small" data-action="toggle" data-target="out-{{$i}}">Показать результат</button>
				<button class="btn small" data-action="copy" data-target="code-{{$i}}">Копировать код</button>
			</div>
			<pre class="code hidden" id="code-{{$i}}"><code>{{$ex.Code}}</code></pre>
			<pre class="output hidden" id="out-{{$i}}"><code>{{$ex.Output}}</code></pre>
		</div>
	</article>
	{{end}}
</section>
{{end}}
